            </Canvas.RenderTransform>
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Props/pedestrian.png" Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="PotHole" Margin="330,109,435,301">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Props/PotHole1.png" Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="PotHole_Copy" Margin="429,109,336,301">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Props/PotHole1.png" Stretch="Uniform"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Window>
