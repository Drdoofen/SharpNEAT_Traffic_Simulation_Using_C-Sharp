<Window x:Name="SimulationWindow1" x:Class="NEATDrive_WPF.SimulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NEATDrive_WPF"
        mc:Ignorable="d"
        Title="NEAT Simulation" Height="735" Width="885" ResizeMode="NoResize" Topmost="True" WindowState="Maximized" WindowStartupLocation="CenterOwner" Closing="OnWindowClose">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/Props/Grass_Cute.png" Opacity="1" Stretch="Fill" TileMode="Tile">
            <ImageBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="1" ScaleY="1.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </ImageBrush.RelativeTransform>
        </ImageBrush>
    </Window.Background>
    <Grid x:Name="SimGrid" UseLayoutRounding="True" Height="512" Width="512">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="Road1_1">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Turn_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road1_2" Grid.Column="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Tri_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road1_3" Grid.Column="2">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Tri_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road2_1" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Straight_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road2_2" Grid.Column="1" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Chowk.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road2_3" Grid.Column="2" Grid.Row="1">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Turn_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road3_1" Grid.Row="2">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Tri_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road3_2" Grid.Column="1" Grid.Row="2">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Tri_Road.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas x:Name="Road3_3" Grid.Column="2" Grid.Row="2">
            <Canvas.Background>
                <ImageBrush ImageSource="/Resources/Images/Roads/SystemicRoads/Straight_Road.png"/>
            </Canvas.Background>
        </Canvas>
    </Grid>
</Window>
